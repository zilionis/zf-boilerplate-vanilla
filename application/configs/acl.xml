<?xml version="1.0" encoding="UTF-8"?>
<acl xmlns:zf="http://framework.zend.com/xml/zend-config-xml/1.0">
    <resources>
        <resource>site:index</resource>
        <resource>site:auth</resource>
        <resource>admin:index</resource>
    </resources>
    <roles>
        <Guest label="Guest">
            <allow>
                <resource name="site:index" permissions="index" />
                <resource name="site:auth" />
            </allow>
        </Guest>
        <Member label="Member" inherits="Guest">
            <allow>
                <resource name="site:index" permissions="view,edit" />
            </allow>
        </Member>
        <Admin label="Admin">
            <allow>
                <resource>*</resource>
            </allow>
        </Admin>
    </roles>
</acl>